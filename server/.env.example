# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/car-rental

# JWT Configuration - Generate a secure secret (at least 32 characters)
JWT_SECRET=your-super-secure-jwt-secret-key-that-is-at-least-32-characters-long
JWT_EXPIRE=7d

# Client Configuration
CLIENT_URL=http://localhost:5173

# ImageKit Configuration
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imageio.com/your_imagekit_id

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
